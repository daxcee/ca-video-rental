<h1>Rent <strong><%= @rental.video.name %></strong></h1>

<%= form_with(model: @rental) do |f| %>

  <%= f.hidden_field :video_id %>

  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <span>Amount: $5.00</span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="<%= @rental.video.name %>"
          data-email="<%= current_user.email%>"
          data-amount="500"
          data-currency="aud"
          data-locale="auto">

  </script>

<% end %>

<%= link_to 'Back', rentals_path, class: 'btn btn-success btn-sm' %>
