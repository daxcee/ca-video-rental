<p id="notice"><%= notice %></p>

<h1>Videos</h1>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th>Year released</th>
      <th>Classification</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.name %></td>
        <td><%= video.genre %></td>
        <td><%= video.year_released %></td>
        <td><%= video.classification %></td>
        <td><%= video.description %></td>
        <td><%= link_to 'Show', video, class: 'btn btn-success btn-sm' %></td>
        <td><%= link_to 'Rent', new_rental_path(video_id: video.id), class: 'btn btn-warning btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Video', new_video_path, class: 'btn btn-warning' %>
